package com.kuku.markets.ui.theme

import androidx.compose.material3.ColorScheme
import androidx.compose.material3.MaterialTheme
import androidx.compose.material3.darkColorScheme
import androidx.compose.runtime.Composable
import androidx.compose.ui.graphics.Color

private val KukuDarkColors: ColorScheme = darkColorScheme(
  primary = KukuPrimary,
  onPrimary = KukuOnPrimary,
  secondary = KukuSecondary,
  background = KukuBackground,
  surface = KukuSurface,
  onSurface = KukuOnSurface,
  onSecondary = Color.White
)

@Composable
fun KukuTheme(content: @Composable () -> Unit) {
  MaterialTheme(
    colorScheme = KukuDarkColors,
    typography = KukuTypography,
    content = content
  )
}
